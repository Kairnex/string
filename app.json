{
  "name": "Telegram Bot Deployment",
  "description": "A Telegram bot deployed on Heroku",
  "env": {
    "API_ID": { "required": true },
    "API_HASH": { "required": true },
    "BOT_TOKEN": { "required": true },
    "MONGO_URI": { "required": true },
    "ADMINS": { "required": true },
    "ADMIN_ID": { "required": true },
    "LOG_CHANNEL_ID": { "required": true },
    "REQUIRED_CHANNEL": { "required": true }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  }
}
